<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTripActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:id="@+id/toolbarID"
                app:titleTextColor="@color/white"/>

        </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/destinationTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Destination"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinationTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_margin="10dp"
                android:layout_below="@+id/from"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromTag"
                android:textColor="@color/blue"
                android:text="From"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/destination"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fromTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/DateTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Date"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DateTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_margin="10dp"
                android:layout_below="@+id/date"/>


            <TextView
                android:id="@+id/pickLocationTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Pickup location"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pickLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pickLocationTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/timingTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pickLocation"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Timing"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timingTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_margin="10dp"
                android:layout_below="@+id/timing"/>

            <TextView
                android:id="@+id/vehicleTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timing"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Vehicle"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/seatsTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Available seats"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seatsTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_margin="10dp"
                android:layout_below="@+id/seats"/>

            <TextView
                android:id="@+id/chargeTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seats"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Charges"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chargeTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_margin="10dp"
                android:layout_below="@+id/charge"/>

            <TextView
                android:id="@+id/inclusionTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/charge"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Tour inclusions"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_margin="10dp"
                android:layout_below="@+id/inclusion"/>

            <TextView
                android:id="@+id/inclusion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inclusionTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/descriptionTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inclusion"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Description"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descriptionTag"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"
                android:layout_margin="10dp"
                android:id="@+id/line"
                android:layout_below="@+id/description"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"
                android:layout_margin="10dp"
                android:layout_below="@+id/viewPager"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress_bar_layout"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    </ScrollView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBookSeats"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_layout"
                    android:text="Book Seat"
                    android:foreground="?attr/selectableItemBackground"
                    android:theme="@style/ThemeOverlay.Material3.Dark"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBookRecords"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_layout"
                    android:text="Bookings"
                    android:foreground="?attr/selectableItemBackground"
                    android:theme="@style/ThemeOverlay.Material3.Dark"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:textSize="17dp" />

</RelativeLayout>